extends layout

block contenido
    .contenido-principal
        h1 #{namePage}

        if errors
            each error in errors
                .alerta= error.texto

        form.agregar-proyecto(action="/new-list" method="POST")
            .campo
                label(for="nombre") Nombre de Lista:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre de lista")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")